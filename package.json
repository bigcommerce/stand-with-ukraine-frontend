{
  "name": "stand-with-ukraine",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bigcommerce/stand-with-ukraine-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/bigcommerce/stand-with-ukraine-frontend/issues"
  },
  "homepage": "https://github.com/bigcommerce/stand-with-ukraine-frontend#readme",
  "author": "",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@bigcommerce/eslint-config": "^2.6.1",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "eslint": "^8.22.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "turbo": "^1.2.16"
  },
  "scripts": {
    "mocks": "rm -rf tmp/mocks/ && mkdir -p tmp/mocks && cp -R mocks.template/* tmp/mocks/ && node tmp/mocks/app.mjs",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel --continue",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,scss,css}\""
  },
  "prettier": "@bigcommerce/eslint-config/prettier",
  "packageManager": "yarn@3.2.1"
}
